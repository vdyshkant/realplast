            .units-content-container
              .units-content-inner
                //- LEFT
                .left
                  img.thumb(src="img/022_i8_content-01.png")
                  .desc
                    .desc-inner
                      .desc-title Однокамерный

                      .desc-content
                        .desc-subtitle Ширина стеклопакета:
                        form.interrogation-unit-form
                          .interrogation-unit-form__items
                            ul
                              li
                                label.unit-form-radio
                                  input(type='radio', name='tree')
                                  span.radio-indicator
                                  .label-text 24 мм
                              li
                                label.unit-form-radio
                                  input(type='radio', name='tree')
                                  span.radio-indicator
                                  .label-text 32 мм
                //- RIGHT
                .right
                  img.thumb(src="img/022_i8_content-02.png")
