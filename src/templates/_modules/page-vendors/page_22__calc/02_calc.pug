                                label.unit-form-radio
                                  input(type='radio', name='tree')
                                  span.radio-indicator
                                  .label-text 32 мм
                              li
                                label.unit-form-radio
                                  input(type='radio', name='tree')
                                  span.radio-indicator
                                  .label-text 36 мм


              .units-content-btm
                .units-content-btm__divider
